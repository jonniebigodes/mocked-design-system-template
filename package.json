{
  "name": "mocked-design-system",
  "version": "0.0.1",
  "description": "Mocked style guide design system",
  "license": "MIT",
  "repository": {},
  "scripts": {
    "dev": "concurrently  -n \"Build,SB\" \"pnpm run build --watch\" \"npm run storybook\" ",
    "type-check": "tsc",
    "lint": "eslint --ignore-pattern .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "lint:fix": "run lint --fix && prettier --write .",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-pattern .gitignore --fix"
    ],
    "*.{js,jsx,json,md}": "prettier --write"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.7",
    "@storybook/addon-docs": "^10.1.7",
    "@storybook/addon-mcp": "0.1.4-next.2",
    "@storybook/addon-vitest": "^10.1.7",
    "@storybook/react-vite": "^10.1.7",
    "@storybook/eslint-config-storybook": "^4.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "8.0.1",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-storybook": "^10.1.7",
    "husky": "^8.0.0",
    "lint-staged": "16.1.0",
    "playwright": "^1.57.0",
    "prettier": "3.3.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.1.7",
    "tsup": "8.5.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "resolutions": {
    "jackspeak": "2.1.1"
  }
}
